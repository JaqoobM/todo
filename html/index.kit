<!DOCTYPE html>
<html lang="pl">

<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>ToDoApp</title>
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap" rel="stylesheet">
     <link rel="stylesheet" href="/dist/css/main.min.css">
</head>

<body>
     <div class="blur"></div>

     <!-- POPUP -->
     <form method="POST" class="create-task-box ">

          <div class="create-task-box__container">

               <p>Dodaj zadanie</p>

               <label for="name">Nazwa</label>
               <input type="text" name="name" id="name">
               <p class="create-task-box__info"></p>

               <button>Dodaj</button>

               <span class="create-task-box__btn-close"><img src="close-icon.svg" alt="Przycisk zamnkij"></span>

          </div>

     </form>

     <form method="POST" class="edit-task-box">

          <div class="edit-task-box__container">

               <p>Edytuj zadanie</p>

               <label for="name">Nazwa</label>
               <input type="text" name="name" id="name">
               <p class="edit-task-box__info"></p>

               <button>Dodaj</button>

               <span class="edit-task-box__btn-close"><img src="close-icon.svg" alt="Przycisk zamnkij"></span>

          </div>

     </form>


     <nav class="nav-drawer">

          <a href="#">Zaloguj</a>

          <a href="#">Zarejestruj</a>

     </nav>
     <!-- @include 'nav-top.kit' -->

     <div class="task-box">

          <div class="task-box__constainer">

               <div class="task-box__task">

                    <p class="task-box__text">Zadanie1</p>
                    
               </div>
               
               <div class="task-box__round">

                    <span class="task-box__check-label" for="checkbox"></span>

               </div>

          </div>


     </div>



     <!-- @include 'nav-bottom.kit' -->

     <script src="/dist/js/main.min.js"></script>
</body>

</html>